{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "importHelpers": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "target": "ES6",
    "outDir": "lib",
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
  ]
}